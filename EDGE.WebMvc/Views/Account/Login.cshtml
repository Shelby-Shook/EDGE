@model EDGE.Models.User.UserLogin;
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex flex-wrap">
    <div class="col-12 col-md-6 offset-md-3">
        <h1 class="display-4 mb-3">Log In</h1>

        <form asp-action="Login" method="post">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="Username" placeholder="username">
                <label asp-for="Username">Username</label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" asp-for="Password" placeholder="password">
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column gap-2">
                <button type="submit" class="btn btn-primary">Log in</button>
                <a asp-action="Register" asp-controller="Account" class="text-center p-2">Register as a new user</a>
            </div>
        </form>
    </div>
</div>