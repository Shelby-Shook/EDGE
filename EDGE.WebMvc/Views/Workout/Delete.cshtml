@model WorkoutLogDetail
@{
    ViewData["Title"] = "Delete " + Model.Notes;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }
        .confirmation-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        h1 {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 20px;
        }
        h2 {
            font-size: 24px;
            margin-bottom: 30px;
        }
        .btn-group {
            display: flex;
            justify-content: center;
        }
        .btn {
            margin: 0 5px;
            padding: 12px 30px;
            font-size: 18px;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .btn-yes {
            background-color: #ff5722;
            color: #fff;
        }
        .btn-no {
            background-color: #444;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <h1>Delete @Model.Notes</h1>
        <h2>Are you sure you want to delete @(Model.Notes)?</h2>
        <hr>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Notes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Notes)
            </dd>
        </dl>
        <div class="btn-group">
            <button class="btn btn-yes">Yes</button>
            <button class="btn btn-no">No</button>
        </div>
    </div>
</body>
</html>
