@model List<WorkoutLogDetail>
<!DOCTYPE html>
<html>
<head>
    <title>Workout Log List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-lg-8">
                <h1 class="text-center">Workout Log List</h1>
                <hr>

                <div class="list-group">
                    @foreach (var log in Model)
                    {
                        <div class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">@log.Notes</h5>
                                <small>@log.Date.ToShortDateString()</small>
                            </div>
                            <a class="btn btn-danger btn-sm" asp-controller="Workout" asp-action="Delete" asp-route-id="@log.Id">Delete</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

